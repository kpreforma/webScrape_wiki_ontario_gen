def solution(sequence):
    if len(sequence) <= 2:
        return True
        
    badpair_index = -1
    
    for i in range(len(sequence) - 1):
        if sequence[i] >= sequence[i + 1]:
            badpair_index = i
            break
        
    if badpair_index == -1:
        return True
    else:
        temp_sequence = sequence.copy()
        temp_sequence.pop(badpair_index)
        for i in range(len(temp_sequence) - 1):
            if temp_sequence[i] >= temp_sequence[i + 1]:
                return False
    return True
    

        
    # for i in range(len(sequence)):
    #     cycle_break = False
    #     temp_sequence = sequence.copy()
    #     removed = temp_sequence.pop(i)
            
    #     for j in range(len(temp_sequence) - 1):
